<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="105dp"
    android:layout_height="105dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/tag_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background_cycler" />

    <!-- TODO(0): Change the tag's text-font-->
    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:text="food"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/tag_check_mark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/tag_tv"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/ic_white_check"
        android:visibility="visible"/>

</RelativeLayout>
