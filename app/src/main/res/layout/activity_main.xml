<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cycler_green"
    tools:context="razdob.cycler.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/person_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="I want a personal Cycler profile"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/cyclerFontSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/person_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/darkGreenButton"
            android:src="@mipmap/ic_person_white_24dp" />

        <TextView
            android:id="@+id/business_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="I want a business Cycler profile"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/cyclerFontSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/business_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/colorPrimaryDark"
            android:src="@mipmap/ic_business_center_white_24dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/cycler_logo" />

    <ProgressBar
        android:id="@+id/main_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:progressDrawable="@drawable/bright_progress" />


</RelativeLayout>


