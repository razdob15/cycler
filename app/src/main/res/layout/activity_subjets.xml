<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cycler_launcher"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/cyclerFontSize"
            android:text="@string/app_name"
            android:textColor="@color/colorLittleCircle"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/define_tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/define_preferences"
        android:textStyle="bold|italic"
        android:textSize="@dimen/titleFontSize"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="15dp"/>

    <ListView
        android:layout_weight="8"
        android:id="@+id/subjects_list_v"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>

    <Button
        android:layout_weight="1"
        android:id="@+id/finish_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/cycler_green"
        android:text="FINISH" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>
